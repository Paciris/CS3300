<!--Jumbotron/Carousel Container-->
<div class="jumbotron text-center">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval=10000>
    <div class="carousel-inner" style="height: 9rem">
      <div class="carousel-item active">
        <div class="container text-dark box-shadow text-center">
          <h1>About Me</h1>
          <p>My name is Jay Murphy, a Colorado native attending UCCS. I have a broad range of skills in the tech field including but not limited to programming in C#, HTML/CSS, Java, C++, and Ruby.</p>
        </div>
      </div>
      <div class="carousel-item">
        <div class="container text-dark box-shadow text-center">
          <h1>This Website</h1>
          <p>This website is a portfolio of various projects I have worked on over the years. These range from simple and fun scripts to games and websites.</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<!--Project Cards-->
<div class="container text-center">
  <h2>Projects</h2>
</div>
<div class="container-fluid mr-auto">
  <button class="btn btn-secondary" type="button"><%= link_to 'New Project', new_project_path %></button>
</div>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card border-dark mb-3" style="min-width: 16rem;">
          <div class="card-body text-dark text-center">
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text text" style="min-height: 10rem"><%= project.description %><p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-dark"><%= link_to 'View', project %></button>
                <button type="button" class="btn btn-sm btn-outline-dark"><%= link_to 'Edit', edit_project_path(project) %></button>
                <button type="button" class="btn btn-sm btn-outline-dark"><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%end%>

    </div>
  </div>
<p class="mt-5 mb-3 text-muted text-center">&copy; Jay Murphy 2022</p>
</div>